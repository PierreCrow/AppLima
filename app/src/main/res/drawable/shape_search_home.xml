<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid android:color="#CAEEEEEE"/>
        <corners android:radius="50dp" />
    </shape>
</item>

<item
    android:left="0dp"
    android:right="0dp"
    android:top="0dp"
    android:bottom="2dp">
    <shape   android:shape="rectangle" >
        <corners android:radius="50dp" />
        <solid
            android:color="@color/white"
            />

        <size
            android:width="260dp"
            android:height="65dp"
            />
        <stroke
            android:width="0dp"
            android:color="@color/com_facebook_blue"
            />
    </shape>
</item>
</layer-list>