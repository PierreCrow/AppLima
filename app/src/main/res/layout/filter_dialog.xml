<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-15dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="0dp">

            <LinearLayout
                android:id="@+id/transparent_linear_filter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/shape_distrit_info"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="0dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp">

                    <RelativeLayout
                        android:id="@+id/rlSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:padding="0dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="4"
                            android:orientation="horizontal"
                            android:paddingLeft="25dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/helveticaneu_bold"
                                android:text="@string/filter_tittle"
                                android:textColor="@color/primaryLabelColor"
                                android:textSize="22sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/cancel" />

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="8"
                    android:orientation="vertical">



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="25dp"
                                android:text="@string/filter_subtittle_first"
                                android:textSize="16sp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/rlInteres1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="0dp">

                                    <TextView
                                        android:id="@+id/tvInteres1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Historia"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlInteres2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">


                                    <TextView
                                        android:id="@+id/tvInteres2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Cultura"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/rlInteres3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvInteres3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Gastronomia"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlInteres4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">

                                    <TextView

                                        android:id="@+id/tvInteres4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"

                                        android:text="Arte"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">


                                <RelativeLayout
                                    android:id="@+id/rlInteres5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvInteres5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Aventura"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                            </LinearLayout>


                            <View android:layout_width="match_parent"
                                android:layout_height="1dip"
                                android:background="@color/lineperfil"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="25dp"
                                android:text="@string/filter_subtittle_thirth"
                                android:textSize="16sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:weightSum="4">


                                <RelativeLayout

                                    android:id="@+id/rlPermanencyDay1"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_filter_permanency_left_off"
                                    android:clickable="true"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="10dp">

                                    <TextView
                                        android:id="@+id/tvPermanencyDay1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Nose"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="12dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlPermanencyDay2"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:background="@drawable/shape_filter_permenency_middle_off"
                                    android:clickable="true">


                                    <TextView
                                        android:id="@+id/tvPermanencyDay2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="10dp"
                                        android:text="1 dia"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="12dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_marginLeft="2dp"
                                    android:id="@+id/rlPermanencyDay3"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_filter_permenency_middle_off"
                                    android:clickable="true">

                                    <TextView
                                        android:id="@+id/tvPermanencyDay3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="10dp"

                                        android:text="2 dias"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="12dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlPermanencyDay4"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="2dp"
                                    android:background="@drawable/shape_filter_permanency_rigth_off"
                                    android:clickable="true">

                                    <TextView
                                        android:id="@+id/tvPermanencyDay4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="10dp"
                                        android:text="+ de 3"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="12dp" />

                                </RelativeLayout>

                            </LinearLayout>


                            <View android:layout_width="match_parent"
                                android:layout_height="1dip"
                                android:background="@color/lineperfil"
                                android:layout_marginTop="15dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="25dp"
                                android:text="@string/filter_subtittle_second"
                                android:textSize="16sp" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvDistrits"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"/>


                        </LinearLayout>




                    </ScrollView>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">



                    <Button
                        android:id="@+id/btnAplicar"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shape_home_filter_button_apply"
                        android:text="@string/filter_apply"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>