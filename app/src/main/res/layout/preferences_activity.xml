<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.ui.activities.ValidationCodeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/botonback" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/helveticaneu_bold"
                android:text="@string/preference_tittle"
                android:textColor="@color/primaryLabelColor"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="11.5">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7.5"
                android:orientation="vertical"
                android:paddingTop="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/helveticaneuelight"
                                android:text="@string/preference_viajero"
                                android:textColor="@color/black"
                                android:textSize="16dp" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">


                                <RelativeLayout
                                    android:id="@+id/rlInteres1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="0dp">

                                    <TextView
                                        android:id="@+id/btnInteres1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Historia"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />


                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/rlInteres2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">


                                    <TextView
                                        android:id="@+id/btnInteres2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Cultura"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">


                                <RelativeLayout
                                    android:id="@+id/rlInteres3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/btnInteres3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Gastronomia"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/rlInteres4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">

                                    <TextView

                                        android:id="@+id/btnInteres4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"

                                        android:text="Arte"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">


                                <RelativeLayout
                                    android:id="@+id/rlInteres5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/btnInteres5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="0dp"
                                        android:text="Gastronomia"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />
                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/rlInteres6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/btnInteres6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="10dp"
                                        android:text="Arte"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:id="@+id/rlInteres8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_home_filter_interes_on"
                                    android:clickable="true">

                                    <TextView
                                        android:id="@+id/btnInteres8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="10dp"
                                        android:text="Gastronomia"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlInteres7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/shape_home_filter_interes_off"
                                    android:clickable="true">

                                    <TextView
                                        android:id="@+id/btnInteres7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:padding="10dp"
                                        android:text="Arte"
                                        android:textAllCaps="false"
                                        android:textColor="@color/interest_label_secconds"
                                        android:textSize="14dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="30dp"
                                android:fontFamily="@font/helveticaneuelight"
                                android:text="@string/preference_time"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <RelativeLayout
                                android:id="@+id/rlSeasrch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="-5dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginBottom="20dp"
                                android:padding="0dip">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="25dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingTop="0dp">

                                    <Spinner
                                        android:id="@+id/spiPermanency"
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:layout_margin="0dp"
                                        android:background="@android:color/transparent"
                                        android:paddingLeft="0dp"
                                        android:paddingTop="0dp"
                                        android:paddingRight="30dp"
                                        android:paddingBottom="-5dp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.7dip"
                                        android:background="@color/subtititlecolor"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="10dp" />

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/btnSearhhsch"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="25dp"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="5dp"
                                    android:src="@drawable/path_6" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="5dp">

                                <ImageView
                                    android:id="@+id/ivContinue"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="3dp"
                                    android:background="@drawable/shape_home_filter_button_apply"
                                    android:text="Continuar"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />


                                <TextView
                                    android:id="@+id/tvContinue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/helveticaneuelight"
                                    android:text="@string/preference_apply"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </ScrollView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>