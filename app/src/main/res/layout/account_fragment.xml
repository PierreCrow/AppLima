<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ivBackgroundUserImage"
                android:layout_marginBottom="75dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent">

            </ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/shape_account"
                android:layout_marginBottom="50dp"
                android:paddingBottom="40dp"
                android:alpha="0.9">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_welcome"
                    android:fontFamily="@font/helveticaneuelight"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneu_bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"/>

            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_camera_account"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

        </RelativeLayout>


        <View
            android:id="@+id/lineOne"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/lineperfil"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:weightSum="4">


            <LinearLayout
                android:id="@+id/llEditarPerfil"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/editarperfil"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/account_profile"
                    android:textSize="17sp"
                    android:textColor="@color/primaryLabelColor"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:paddingLeft="10dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/iricon"/>

            </LinearLayout>

            <View
                android:id="@+id/lineTwo"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/lineperfil"
                android:layout_marginTop="9dp"/>

            <LinearLayout
                android:id="@+id/llPreferencias"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center"
                android:padding="10dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/preferencias"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/account_preference"
                    android:textSize="17sp"
                    android:textColor="@color/primaryLabelColor"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:paddingLeft="10dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/iricon"/>

            </LinearLayout>

            <View
                android:id="@+id/lineThree"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/lineperfil"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:clickable="true"
                android:id="@+id/llValoraApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center"
                android:padding="10dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/valorar"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/account_rate_app"
                    android:textSize="17sp"
                    android:textColor="@color/primaryLabelColor"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:paddingLeft="10dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/iricon"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/lineperfil"
                android:layout_marginTop="9dp"/>

            <LinearLayout
                android:id="@+id/llCerrarSesion"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/cerrarsesion"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="@string/account_logout"
                    android:textSize="17sp"
                    android:textColor="@color/primaryLabelColor"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:paddingLeft="10dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/iricon"/>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/lineperfil"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>