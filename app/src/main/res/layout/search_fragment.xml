<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="14">

    <FrameLayout
        android:id="@+id/containerViewHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:visibility="visible"
                android:weightSum="8.5">

                <RelativeLayout
                    android:id="@+id/rlSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:padding="0dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="4"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:background="@drawable/shape_search_home"
                            android:gravity="center_vertical"
                            android:hint="@string/search_fragment_edit_text_search"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:paddingLeft="55dp"
                            android:textSize="16dp" />

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:text="Cancelar"
                    android:textColor="@color/primaryLabelColor"
                    android:textSize="15dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="8.5"
                android:orientation="vertical"
                android:scrollbars="none"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvRecentlySearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:text="@string/search_fragment_text_view_recently_searchs"
                    android:textColor="@color/subtititlecolor"
                    android:textSize="18dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/llRecentlyTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rlRecentlyTag1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_home_filter_interes_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvRecentlyTag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/helveticaneuelight"
                            android:padding="0dp"
                            android:text="Historia"
                            android:textAllCaps="false"
                            android:textColor="@color/interest_label_secconds"
                            android:textSize="14dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="5dp"
                        android:id="@+id/rlRecentlyTag2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_home_filter_interes_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvRecentlyTag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/helveticaneuelight"
                            android:padding="0dp"
                            android:text="Historia"
                            android:textAllCaps="false"
                            android:textColor="@color/interest_label_secconds"
                            android:textSize="14dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="5dp"
                        android:id="@+id/rlRecentlyTag3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_home_filter_interes_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvRecentlyTag3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/helveticaneuelight"
                            android:padding="0dp"
                            android:text="Historia"
                            android:textAllCaps="false"
                            android:textColor="@color/interest_label_secconds"
                            android:textSize="14dp" />


                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:text="@string/search_fragment_text_view_suggested_searchs"
                    android:textColor="@color/subtititlecolor"
                    android:textSize="18dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSuggestedTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:orientation="horizontal" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>