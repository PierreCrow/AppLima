<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="25dp"
    app:cardUseCompatPadding="true"
    android:padding="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:padding="0dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivRouteImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/eaters_collective_rs2opgfbemk_unsplash_copy_7"/>


        <LinearLayout
            android:background="@drawable/fondoscurorutastematicas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            android:gravity="center">



            <ImageView
                android:id="@+id/ivRouteIcon"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:src="@drawable/foodieicon"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="RUTA FOODIE"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textSize="17dp"
                android:fontFamily="@font/helveticaneuemedium"/>



        </LinearLayout>





    </RelativeLayout>

</androidx.cardview.widget.CardView>